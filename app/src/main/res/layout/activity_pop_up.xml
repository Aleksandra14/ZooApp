<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6FFDF6F6"
    tools:context=".PopUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6FFDF6F6">

        <TextView
            android:id="@+id/txtOdaberiNivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Odaberi nivo:"
            android:textSize="28dp"
            android:layout_marginTop="10dp"/>

        <!--Spinner
            android:id="@+id/spinner"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txtOdaberiNivo"
            android:layout_marginTop="45dp"
            android:textAlignment="center"
            android:scrollbarSize="10dp"
            android:background="@drawable/spiner_dizajn"
            /-->

        <ListView
            android:id="@+id/listViewNivoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtOdaberiNivo"
            android:layout_marginTop="35dp"/>

        <Button
            android:id="@+id/btnZapocniKviz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/listViewNivoi"
            android:layout_marginTop="40dp"
            android:text="ZapoÄni kviz"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/dugme_zapocni_kviz"
            />

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>