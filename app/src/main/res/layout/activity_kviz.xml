<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KvizActivity"
    android:background="@drawable/bgapp2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtKviz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kviz"
            android:layout_centerHorizontal="true"
            android:textSize="55dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/alegreya"
            />

        <TextView
            android:id="@+id/txtBrPitanja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/5"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtKviz"
            android:textSize="35dp"
            android:layout_marginTop="18dp"/>

        <TextView
            android:id="@+id/txtPitanje"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:text="Pitanje lsafdjslfjaslkjalsjdflkfjaljflasjklafkdjladjfljfslajfdlsakdjfljflksjldfjaslkddf"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txtBrPitanja"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="5dp"
            android:lineSpacingExtra="5dp"
            android:background="@drawable/dizajn_pitanje"
            android:textAlignment="center"/>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtPitanje"
            >

            <RadioButton
                android:id="@+id/rbtn1"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:text="Opcija 1"
                android:textSize="19sp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="15dp"
                android:paddingStart="13dp"
                android:textColor="@color/crna"
                android:textAllCaps="false"
                />

            <RadioButton
                android:id="@+id/rbtn2"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:text="Opcija 2"
                android:textSize="19sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:paddingStart="13dp"
                android:textAllCaps="false"/>

            <RadioButton
                android:id="@+id/rbtn3"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:text="Opcija 3"
                android:textSize="19sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:paddingStart="13dp"
                android:textAllCaps="false"/>

        </RadioGroup>

        <Button
            android:id="@+id/btnPrethodno"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_below="@id/radioGroup"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="13dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/dizajn_prethodno"
            android:text="Prethodno"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/btnSledece"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_below="@id/radioGroup"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/dizajn_prethodno"
            android:text="SledeÄ‡e"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textAllCaps="false"/>

    </RelativeLayout>
</ScrollView>