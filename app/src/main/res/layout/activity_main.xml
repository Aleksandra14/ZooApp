<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapp"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.ImageClassification.AppBarOverlay">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ZooApp"
                android:textColor="@color/roza"
                android:textSize="55dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline2"
                android:gravity = "center"
                android:id="@+id/toolbar_title" />


       <!--androidx.appcompat.widget.Toolbar
           android:id="@+id/toolbar"
           android:layout_width="match_parent"
           android:layout_height="90dp"
           android:layout_height="?attr/actionBarSize"
           android:background="?attr/colorPrimary"
           app:titleTextColor="@color/roza"
           app:titleMarginStart="112dp"
           app:titleTextAppearance="@style/TextAppearance.MaterialComponents.Headline2"
           app:title="ZooApp"
           app:popupTheme="@style/AppTheme.ImageClassification.PopupOverlay" /-->

    </com.google.android.material.appbar.AppBarLayout>
<!--
    <include layout="@layout/content_main" />   -->

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@drawable/ikonica2"/>

    <Button
        android:id="@+id/dugme"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="-80dp"
        android:background="@drawable/custom_dugme"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:onClick="skeniraj"
        android:padding="15dp"
        android:text="Skeniraj životinju"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/dugme2"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_below='@+id/dugme'
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:width="220dp"
        android:height="40dp"
        android:background="@drawable/custom_dugme2"
        android:fontFamily="@font/open_sans"
        android:gravity="center"
        android:onClick="pogodi"
        android:padding="15dp"
        android:text="Pogodi životinju"
        android:textColor="@color/roza" />

    <Button
        android:id="@+id/dugme3"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_below='@+id/dugme2'
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        android:height="50dp"
        android:background="@drawable/custom_dugme3"
        android:fontFamily="@font/roboto"
        android:onClick="igrajKviz"
        android:padding="15dp"
        android:text="Igraj kviz"
        android:textColor="@color/white" />

    <ImageButton
        android:id="@+id/btnMuzika"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:background="@drawable/ic_baseline_play_arrow_24"
    />

    <!--com.google.android.material.floatingactionbutton.FloatingActionButton
