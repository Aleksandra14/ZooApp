                android:textColor="@android:color/black"
                android:textSize="16sp" /-->
        <!--/LinearLayout-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtView"
                android:textSize="24dp"
                android:text="Upiši naziv:"
                android:textColor="@color/siva"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:id="@+id/editPokusaj"
                android:singleLine="true"
                />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPogodi"
            android:text="Pogodi"
            android:layout_gravity="right"
            android:onClick="promeniBoju"
            android:background="@drawable/dugme_pogodi"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSaznajVise"
            android:text="Saznaj više"
            android:layout_gravity="center"
            android:onClick="saznajVise"
            android:background="@drawable/dugme_saznaj_vise"
            android:textColor="@color/white"
            />


        <!--View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray" /-->

    </LinearLayout>

</LinearLayout>


